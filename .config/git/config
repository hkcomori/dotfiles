[core]
	autocrlf = false
	filemode = true
	quotepath = false
	pager = delta
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true
	line-numbers = false
[diff]
	algorithm = histogram
[merge]
	ff = false
[branch]
	autosetuprebase = always
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	la = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = ls-files -s
	ad = add
	ci = commit
	cm = commit -m
	st = status
	br = branch
	co = checkout
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	dc = diff --cached
	df = diff
	ds = diff --staged
	dw = diff -w
	fe = fetch
	pl = pull
	st = status
[credential]
	helper = cache
	helper = git-credential-manager
	credentialStore  = cache
	cacheOptions  = "--timeout 15552000"

# Machine specified configuration
[include]
	path = ~/.config/git/local.conf

# Repository scope configuration based of local condition
[includeIf "gitdir/i:C:/"]
	path = ~/.config/git/windows.conf
[includeIf "gitdir/i:D:/"]
	path = ~/.config/git/windows.conf
[includeIf "gitdir/i:/mnt/c/"]
	path = ~/.config/git/windows.conf
[includeIf "gitdir/i:/mnt/d/"]
	path = ~/.config/git/windows.conf

# Repository scope configuration based on remote url
[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
	path = ~/.config/git/hkcomori.conf
[includeIf "hasconfig:remote.*.url:https://github.com/**"]
	path = ~/.config/git/hkcomori.conf
[includeIf "hasconfig:remote.*.url:git@totoro:*/**"]
	# It matches `git@totoro:user/repo.git` but does not match `git@totoro:repo.git`
	path = ~/.config/git/work.conf
[includeIf "hasconfig:remote.*.url:git@totoro:**"]
	# It matches `git@totoro:repo.git` but does not match `git@totoro:user/repo.git`
	path = ~/.config/git/work.conf
