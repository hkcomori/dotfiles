[core]
	attributesfile = ~/.gitattributes_global
	autocrlf = true
	editor = /app/cygwin/emacs/bin/emacs -q -nw -l ${HOME}/.emacs.d/init-mini.el
	pager = nkf -w | LESSCHARSET=utf-8 less -x4
	quotepath = false
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8
[diff]
	algorithm = histogram
	renames = copies
[diff "docx"]
	binary = true
	textconv = ~/bin/docx2txt/docx2txt
[diff "xlsx"]
	binary = true
	textconv = ~/bin/git-xlsx-textconv/git-xlsx-textconv.pl
[merge]
	ff = false
[branch]
	autosetuprebase = always
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	la = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	lgu = log -p --encoding=utf-8 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	lgs = log -p --encoding=shift-jis --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	ci = commit
	cm = commit -m
	st = status --short --branch
	br = branch
	co = checkout
	df = diff -w
	dw = diff -w --color-words
	dwr = diff -w --color-words --word-diff-regex='\\w+|[^[:space:]]'
	update = add --update
	delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d; };f"
[include]
	path = .gitconfig_local
