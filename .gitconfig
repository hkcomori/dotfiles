[core]
	attributesfile = ~/.gitattributes_global
	autocrlf = true
	editor = ${EDITOR}
	pager = nkf -w | LESSCHARSET=utf-8 less -x4
	quotepath = false
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8

[diff]
	algorithm = histogram
	renames = copies
[color "diff"]
	meta = normal dim
	frag = black cyan ul
	old = red reverse
	new = green reverse
[diff "cpp"]
	wordRegex = "[a-zA-Z_][a-zA-Z0-9_]*|[-+0-9.e]+[fFlL]?|0[xXbB]?[0-9a-fA-F]+[lLuU]*|[-+*/<>%&^|=!]=|--|\\+\\+|<<=?|>>=?|&&|\\|\\||::|->[a-zA-Z_][a-zA-Z0-9_]*|\\.\\*|[^[:space:]]|[[ソ]+]"
[diff "docx"]
	binary = true
	textconv = ~/bin/docx2txt/docx2txt
[diff "xlsx"]
	binary = true
	textconv = ~/bin/git-xlsx-textconv/git-xlsx-textconv.pl

[merge]
	ff = false
[branch]
	autosetuprebase = always
[alias]
	lg = log --pretty=format:'%x09%C(ul red)%h%Creset %C(green)%cd%Creset -%C(yellow)%d%Creset %s' --abbrev-commit --date=short --graph
	la = log --pretty=format:'%x09%C(ul red)%h%Creset %C(green)%cd%Creset -%C(yellow)%d%Creset %s' --abbrev-commit --date=short --graph --all
	lf = log --pretty=format:'■ %C(ul red)%h%Creset %C(green)%cd%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=short -p --name-status
	lgu = log --pretty=format:'Commit: %C(ul red)%h%Creset %C(green)%cd%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=short -p --reverse --encoding=utf-8
	lgs = log --pretty=format:'Commit: %C(ul red)%h%Creset %C(green)%cd%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=short -p --reverse --encoding=shift-jis
	ci = commit
	cm = commit -m
	st = status --short --branch
	br = branch
	co = checkout
	df = diff -w
	dw = diff -w --color-words
	dwr = diff -w --color-words --word-diff-regex='\\w+|[^[:space:]]'
	delete-merged-branch = "!git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d;"
[include]
	path = .gitconfig_local
