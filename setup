#!/usr/bin/env -S bash -e -o pipefail
# Setup dotfiles

umask 022

LINKFILES=(
    .aliases
    .bash_logout
    .bashrc
    .config/flake8
    .config/pep8
    .gitconfig
    repos/.gitconfig
    .gnupg/gpg-agent.conf
    .gnupg/gpg.conf
    .profile
    .ssh/config
    .zshrc
    .zprofile
    .zsh.d
)

DIRECTORIES=(
    work
)

COPYFILES=(
    .gnupg/sshcontrol
)

PERMISSIONS=(
    .ssh
    .gnupg
)

install_common() {
    sudo apt-get install -y \
        language-pack-ja \
        cloc \
        zsh
}

install_python() {
    autopep8 --version && flake8 --version && mypy --version && return 0 || echo "Setup Python"
    sudo apt-get install -y python3 python3-pip
    sudo -HE pip3 install autopep8 flake8 mypy
}

install_ansible() {
    ansible --version && return 0 || echo "Setup Ansible"
    sudo apt-get install -y ansible ansible-lint
}

install_nodejs() {
    node -v && return 0 || echo "Setup Node.js"

    sudo apt-get install -y \
        nodejs \
        npm

    sudo npm install n --location=global
    sudo n stable

    sudo apt-get purge -y \
        nodejs \
        npm
}

cd "$(dirname "$0")"

for file in "${LINKFILES[@]}"; do
    target="${HOME}"/"${file}"
    mkdir -pv "$(dirname "${target}")"
    [ -e "${target}" ] || ln -sTv "$(pwd)"/"${file}" "${target}"
done

for file in "${COPYFILES[@]}"; do
    target="${HOME}"/"${file}"
    mkdir -pv "$(dirname "${target}")"
    cp --preserve=mode -nv "$(pwd)"/"${file}" "${target}"
done

for dir in "${DIRECTORIES[@]}"; do
    target="${HOME}"/"${dir}"
    mkdir -pv "${target}"
done

for file in "${PERMISSIONS[@]}"; do
    target="${HOME}"/"${file}"
    chmod -v "$(stat -c '%a' "${file}")" "${target}"
done

# if running on WSL
if which wslpath &>/dev/null; then
    run-parts -v --regex '[0-9]{2}-.+$' win_setup
fi

sudo apt-get update

install_common
install_python
install_ansible
install_nodejs

sudo chsh -s "$(which zsh)" "$(whoami)"
