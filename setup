#!/usr/bin/env bash
# Setup dotfiles

LINKFILES=(
    .aliases
    .bash_logout
    .bashrc
    .config/flake8
    .config/pep8
    .gitconfig
    .gitconfig_mainuser
    .gnupg/gpg-agent.conf
    .gnupg/gpg.conf
    .profile
    .ssh/config
    .zshrc
    .zprofile
    .zsh.d
)

COPYFILES=(
    .gnupg/sshcontrol
)

cd "$(dirname $0)"

for file in ${LINKFILES[@]}; do
    target="${HOME}"/"${file}"
    mkdir -p $(dirname "${target}")
    ln -fsT "$(pwd)"/"${file}" "${target}"
done

for file in ${COPYFILES[@]}; do
    target="${HOME}"/"${file}"
    mkdir -p $(dirname "${target}")
    cp --preserve=mode "$(pwd)"/"${file}" "${target}"
done
